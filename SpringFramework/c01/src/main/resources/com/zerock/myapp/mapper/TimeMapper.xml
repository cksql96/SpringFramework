<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">    
    
<mapper namespace="com.zerock.myapp.mapper.TimeMapper">

	<!-- id속성의 값은 , Mapper interface에 선언한 추상메소드의 이름과 동일하게 지정 -->
	<select id="currentTime2" resultType="string" >
		SELECT 
			sysdate
		FROM
			dual
	</select>
	
	<select id="getEmployees" resultType="string">
		SELECT
			*
		FROM
			Employee
	
	</select>

</mapper>